html,body
  height 100%
  width 100%
  margin 0
  padding 0

li,div
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif

background-linear-gradient(from, to)
  background-image -webkit-linear-gradient(top, from, to)
  background-image -moz-linear-gradient(top, from, to)
  background-image -ms-linear-gradient(top, from, to)
  background-image linear-gradient(top, from, to)

#menu
  height 50px
  -webkit-box-shadow 0 0 50px black
  -moz-box-shadow 0 0 50px black
  -ms-box-shadow 0 0 50px black
  box-shadow 0 0 50px black
  position fixed
  top 0
  left 0
  right 0
  z-index 1
  background-linear-gradient rgba(208, 208, 208, 0.95) rgba(144, 144, 144, 0.95)
  font-size 20px
  .item
    display inline-block
    height 100%
    margin 0 25px 0 0
    vertical-align middle
    *
      display inline-block
      vertical-align middle
    &:first-child
      margin-left -6px

#logo
  height 50px
  width 59px
  border none

a
  color white
  text-decoration none
  text-shadow 0 0 20px black

#biglogo
  height 430px
  width 430px
  margin auto
  float right
  position relative
  top calc(100% \- 430px)

.section
  height 100%
  width 100%
  font-size 60px
  color white

.centered,.content
  width 60%
  margin auto

.content
  padding-top 100px
  p
    margin 0.25em 0

#about
  background-linear-gradient #b800ff #0ff

#bigdata
  background-linear-gradient #ff9900 #e000ff

#mobile
  background-linear-gradient #6f3e00 #b66323

#web
  background-linear-gradient #2cdf00 #0024cc

#around
  background-linear-gradient #f00 #ff0

#contact
  background-linear-gradient black #00005f

ul
  list-style none
  padding 0
  margin 0
