html,body
  height 100%
  width 100%

html,body,.n
  margin 0
  padding 0

li,div
  font-family "HelveticaNeue-Light", "Helvetica Neue Light", "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif

#menu
  height 50px
  -webkit-box-shadow 0 0 50px black
  position fixed
  top 0
  left 0
  right 0
  z-index 1
  background-image -webkit-linear-gradient(top, rgba(208, 208, 208, 0.95), rgba(144, 144, 144, 0.95))
  font-size 20px
  .item
    display inline-block
    height 100%
    margin 0 25px 0 0
    vertical-align middle
    *
      display inline-block
      vertical-align middle
  .item:first-child
    margin-left -6px

a 
  color white
  text-decoration none
  text-shadow 0 0 20px black

#biglogo
  height 430px
  width 430px
  margin auto
  float right
  position relative
  top calc(100% \- 430px)

.section 
  height 100%
  width 100%
  font-size 60px
  color white

.centered,.content
  width 60%
  margin auto

.content 
  padding-top 100px
  p 
    margin 0.25em 0


#around .row 
  padding-top 100px


#about 
  background-image -webkit-linear-gradient(top, #f00, #ff0)


#bigdata 
  background-image -webkit-linear-gradient(top, #b800ff, #0ff)


#mobile 
  background-image -webkit-linear-gradient(top, #6f3e00, #b66323)


#web 
  background-image -webkit-linear-gradient(top, #2cdf00, #0024cc)


#around 
  background-image -webkit-linear-gradient(top, #ff9900, #e000ff) 


#contact 
  background-image -webkit-linear-gradient(top, black, #00005f)


ul 
  list-style none
  padding 0
  margin 0


.panel 
  vertical-align middle
  text-align center
  height 100%
